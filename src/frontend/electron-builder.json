{
  "appId": "com.isec.literaturereviewhelper",
  "productName": "Literature Review Helper",
  "copyright": "Copyright Â© 2025 ISEC",
  "directories": {
    "output": "dist-electron",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "electron-preload.js",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "resources/backend/backend.jar",
      "to": "backend/backend.jar",
      "filter": ["**/*"]
    },
    {
      "from": "resources/jre-${os}-${arch}",
      "to": "jre",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "resources/icon.ico",
    "artifactName": "${productName}-${version}-Windows-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Literature Review Helper"
  },
  "portable": {
    "artifactName": "${productName}-${version}-Windows-${arch}-Portable.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "resources/icon.png",
    "category": "Education",
    "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
  },
  "deb": {
    "depends": []
  },
  "appImage": {
    "license": "LICENSE"
  }
}
