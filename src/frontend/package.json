{
  "name": "literature-review-helper",
  "private": true,
  "version": "0.0.0",
  "description": "Literature Review Helper",
  "author": "ISEC",
  "type": "module",
  "main": "electron-main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/pedrojorge188/LiteratureReviewHelper.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently --kill-others \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "prepare-resources": "node scripts/prepare-resources.cjs",
    "clean-resources": "rimraf resources temp-downloads",
    "electron:build": "npm run build && npm run prepare-resources && electron-builder",
    "electron:build:win": "npm run build && npm run prepare-resources && electron-builder --win",
    "electron:build:linux": "npm run build && npm run prepare-resources && electron-builder --linux"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "electron-log": "^5.4.3",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "sass": "^1.93.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^22.9.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitejs/plugin-react": "^5.0.3",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fs-extra": "^11.2.0",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "tar": "^7.4.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^9.0.1"
  }
}
